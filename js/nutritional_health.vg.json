{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bubble plot for showing the correlation between death rate due to high diet in sodium and glucose affect the death rate due to high blood pressure",
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "domain": false,
      "ticks": false,
      "grid": false,
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "titleColor": "white",
      "labelColor": "white"
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "titleColor": "white",
      "labelColor": "white"
    },
    "header": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "titleColor": "white",
      "labelColor": "white"
    },
    "mark": {
      "font": "sans-serif"
    },
    "title": {
      "font": "sans-serif",
      "subtitleFont": "sans-serif",
      "color": "white",
      "anchor": "start",
      "fontWeight": "bold",
      "fontSize": {
        "expr": "16"
      },
      "subtitlePadding": {
        "expr": "10"
      }
    }
  },
  "padding": {
    "left": 20,
    "top": 20,
    "right": 20,
    "bottom": 20
  },
  "width": 500,
  "height": 400,
  "background": "black",
  "data": {
    "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Assignment-2/main/data/nutriotinal_death_rate.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Overall",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Select a Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum['Continent region'] == Continent_selection"
    },
    {
      "calculate": "datum['Diet high in sodium']/datum.Population * 100000",
      "as": "Death Rate Caused by Diet High in Sodium per 100k population"
    },
    {
      "calculate": "datum['High systolic blood pressure']/datum.Population * 100000",
      "as": "Death Rate Caused by High Systolic Blood Pressure per 100k population"
    },
    {
      "calculate": "datum['High fasting plasma glucose']/datum.Population * 100000",
      "as": "Death Rate Caused by High Fasting Plasma Glucose per 100k population"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        },
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        }
      ],
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "Death Rate Caused by Diet High in Sodium per 100k population",
          "type": "quantitative",
          "axis": {
            "grid": false,
            "labelAngle": 0
          }
        },
        "y": {
          "field": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
          "type": "quantitative",
          "axis": {
            "grid": false
          }
        },
        "color": {
          "title": "Continent",
          "field": "Continent region",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#219ebc",
              "#612f9e",
              "#2450ff",
              "#ffb703",
              "#87581f",
              "#b40404"
            ]
          },
          "legend": {
            "title": "Continent",
            "orient": "right",
            "offset": 10,
            "labelOffset": 3,
            "labelFontSize": 12,
            "titleFontSize": 13,
            "titlePadding": 5,
            "padding": 5
          }
        },
        "size": {
          "field": "Death Rate Caused by High Fasting Plasma Glucose per 100k population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              50,
              100,
              200,
              300
            ],
            "range": [
              10,
              50,
              150,
              200,
              300
            ]
          },
          "legend": {
            "title": "Death rate by high glucose level",
            "orient": "right",
            "offset": 10,
            "labelOffset": 3,
            "labelFontSize": 12,
            "titleFontSize": 13,
            "titlePadding": 5,
            "format": ".1s",
            "padding": 5,
            "columns": 1,
            "symbolFillColor": "white"
          }
        },
        "opacity": {
          "condition": [
            {
              "param": "hover",
              "value": 1
            }
          ],
          "value": 0.2
        },
        "stroke": {
          "condition": [
            {
              "param": "hover",
              "empty": false,
              "value": "white"
            }
          ],
          "value": null
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "hover",
              "value": 2
            }
          ],
          "value": null
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Continent region",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death rate caused by high systolic blood pressure"
          },
          {
            "field": "Death Rate Caused by Diet High in Sodium per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death rate caused by diet high in sodium"
          },
          {
            "field": "Death Rate Caused by High Fasting Plasma Glucose per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death rate caused by high fasting plasma glucose"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -5,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "x": {
          "field": "Death Rate Caused by Diet High in Sodium per 100k population",
          "type": "quantitative"
        },
        "y": {
          "field": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
          "type": "quantitative"
        },
        "color": {
          "value": "white"
        },
        "opacity": {
          "condition": {
            "test": "datum.Country == 'Malaysia' || datum.Country == 'United States' || datum.Country == 'Australia' || datum.Country == 'China'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Continent region",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death rate caused by high systolic blood pressure"
          },
          {
            "field": "Death Rate Caused by Diet High in Sodium per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death rate caused by diet high in sodium"
          },
          {
            "field": "Death Rate Caused by High Fasting Plasma Glucose per 100k population",
            "type": "quantitative",
            "format": ",",
            "title": "Death rate caused by high fasting plasma glucose"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "red"
      },
      "transform": [
        {
          "regression": "Death Rate Caused by Diet High in Sodium per 100k population",
          "on": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
          "method": "linear"
        }
      ],
      "encoding": {
        "x": {
          "title": "Death Rate Caused by Diet High in Sodium",
          "field": "Death Rate Caused by Diet High in Sodium per 100k population",
          "type": "quantitative"
        },
        "y": {
          "title": "Death Rate Caused by High Systolic Blood Pressure",
          "field": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "Death Rate Caused by Diet High in Sodium per 100k population",
          "on": "Death Rate Caused by High Systolic Blood Pressure per 100k population",
          "method": "linear",
          "params": true
        },
        {
          "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
          "as": "R2"
        }
      ],
      "mark": {
        "type": "text",
        "color": "red",
        "x": 450,
        "align": "right",
        "y": 10
      },
      "encoding": {
        "text": {
          "type": "nominal",
          "field": "R2"
        }
      }
    }
  ]
}